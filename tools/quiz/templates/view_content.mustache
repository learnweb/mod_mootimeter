<div class="row justify-content-md-center mootimeter_margin_top_50">

  <div class="col-md-8">
    <div id="mootimeter_question_div">
      {{{question_text}}}
    </div>
  </div>

  <div class="col-md-8">
    <mtmt_question_section id="mtmt_question_section" data-pageid="{{pageid}}">
      {{#answer_options}}
      {{> mootimetertool_quiz/answer_option}}
      {{/answer_options}}

      {{#isediting}}
      <div>
        <input type="button" id="new_ao" class="mtmt_radio" name="new_ao">
        <label class="ao_label" for="new_ao" style="padding-bottom: 0;">
          <div class="mootimeterfullwidth" style="display: table;height: 50px; overflow: hidden;">
            <div class="mootimeterfullwidth" style="display: table-cell; vertical-align: middle;">
              <div class="mootimeterfullwidth mootimeter_textcenter">
                <h1 style="margin: 0"><i class="fa fa-plus"></i></h1>
              </div>
            </div>
          </div>
        </label>
      </div>
      {{/isediting}}

    </mtmt_question_section>
    {{! <button class="btn btn-primary mootimeterfullwidth">Absenden</button> }}
  </div>

</div>
